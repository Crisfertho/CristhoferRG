---
import "@fontsource-variable/onest"
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from "astro:transitions"

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/CRG.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <ViewTransitions />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

	</head>
	<body class=" text-black dark:text-white">
    <div class="relative h-full w-full dark:absolute"><div class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_500px_at_50%_200px,#3e3e3e,transparent)]"></div></div>
    <Header />
	<slot />
	<Footer />
  </body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		color: rgba(17, 17, 17, 0.9);
		display: flex;
		flex-direction: column;
		min-height: 100vh; /* Asegura que el body ocupe el 100% de la altura */
		overscroll-behavior: none;
	}

  	/* Colores para el fondo y texto en modo claro */
	body.light {
    background-color: white;
    color: black;
	}

	/* Colores para el fondo y texto en modo oscuro */
	body.dark {
		background-color: #121212; /* Fondo oscuro */
		color: white;
	}

</style>
